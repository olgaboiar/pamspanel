<div class="container">
<div class="row">
    <h4>Courses offered by school:</h4>
</div>
<div class="row">
<% @courses.each do |course| %>
    <div class="col s12 m3">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <a href="courses/<%=course.id %>" class="card-main-image" style="background-image: linear-gradient(to bottom, rgba(100,100,113,0.5), rgba(178,146,113,0.5)), url(<%= course.picture %>)">
                    <span class="card-title"><%= course.title %></span>
                </a>
            </div>
            <div class="card-content">
                <p><%= course.hours %> hours</p>
                <p class="truncate"><%= course.description %></p>
            </div>
            <div class="card-action">
                <a href="courses/<%=course.id %>">Show More</a>
                <a href="courses/<%=course.id %>/edit">Edit</a>
            </div>
        </div>
    </div>
    <% end %>
</div></div>