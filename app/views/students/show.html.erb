<div class="container">
    <div class="row">
        <div class="col s12"><h4><%= @student.first_name %> <%= @student.last_name %></h4></div>
        <div class="col s12 m4"><img id= "student-image" src="https://blog.ed.gov/wp-content/themes/educated/img/default-avatar.png?"></div>
        <div class="col s12 m6">
            <h5>Email: <%= @student.email %></h5>
            <h5>Phone: <%= @student.phone %></h5>
            <h5>Birthday: <%= @student.birthday %></h5>
            <h5>Education: <%= @student.education %></h5>
            <h5>Cohort: <%= @student.cohort.name %></h5></div>
        <div class="col s12 m2">
            <a class="btn" href="/students/<%=@student.id %>/edit">Edit Student</a>
        </div>
    </div>
    <div class="row">
        <div class="col s12 offset-m2 m2"><a class="modal-trigger btn" href="#delete-student-modal">Delete</a></div>
    </div>
</div>


<div id="delete-student-modal" class="modal">
  <div class="modal-content">
    <h5>Are you sure you want to delete <%= @student.first_name %> <%= @student.last_name %>?</h5>
    <%= form_tag student_path(@student.id), method: "delete" %>
        <button class="btn waves-effect waves-light grey" type="submit">Yes</button>
        <button class="btn waves-effect waves-light grey modal-close">No</button>
  </div>
  <div class="modal-footer">
    <a href="" class="modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>




