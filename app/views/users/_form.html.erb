<%= form_for @user, remote: true do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.text_field :role, id: :user_role %>
  </div>

  <div class="field">
    <%= f.label :userpic %>
    <%= f.text_field :userpic, id: :user_userpic %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>