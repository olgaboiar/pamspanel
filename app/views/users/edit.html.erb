<%= form_for @user do |f| %>  
    <%= f.label :username %>  
    <%= f.text_field :username, value: @user.username %>  
    <%= f.label :email %>  
    <%= f.text_field :email, value: @user.email %>
    <%= f.label :password %>  
    <%= f.text_field :password, value: @user.password %>
    <%= f.label :role %> 
    <%= f.text_field :role, value: @user.role %>
    <%= f.label :userpic %> 
    <%= f.text_field :userpic, value: @user.userpic %> 
    <%= f.submit %>
<% end %>